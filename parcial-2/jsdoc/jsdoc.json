{
	"source": {
		"include": ["./"],
		"exclude": ["node_modules"]
	},
	"opts": {
		"destination": "./docs",
		"recurse": true,
		"template": "node_modules/docdash",
		"encoding": "utf8",
		"private": true,
		"tutorials": "tutorials",
		"verbose": true,
		"readme": "README.md",
		"theme_opts": {
			"navType": "vertical",
			"syntaxTheme": "dark",
			"search": true,
			"sort": true
		}
	},
	"plugins": ["plugins/markdown", "plugins/summarize"],
	"templates": {
		"cleverLinks": true,
		"monospaceLinks": false,
		"default": {
			"outputSourceFiles": true,
			"includeDate": false
		}
	},
	"markdown": {
		"hardwrap": false,
		"idInHeadings": true
	}
}
