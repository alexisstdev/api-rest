{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["web/dist", "api/dist", "api/prisma", ".vscode"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useSemanticElements": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noUnusedImports": {
					"level": "warn",
					"fix": "safe"
				}
			},
			"complexity": {
				"noForEach": "off",
				"noStaticOnlyClass": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "off",
				"noImplicitAnyLet": "off",
				"noShadowRestrictedNames": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
